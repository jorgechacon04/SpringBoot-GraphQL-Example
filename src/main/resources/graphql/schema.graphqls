schema {
    query: Query
    mutation: Mutation
}

type Customer {
    id: ID!,
    name: String,
    lastName: String
}

type Query {
    findAllCustomers: [Customer]!
    findCustomer (id : Int) : Customer
    findCustomerByIds(ids : String!) : [Customer]
    findCustomersNameStartsWith(startsWith : String!) : [Customer]
}

type Mutation {
    addCustomer(id : Int!, name : String! , lastName : String!) : Customer!
    deleteCustomer(id : Int!) : String!
}





